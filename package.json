{
  "name": "workflow-wait-action",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "author": "ygqygq2 <ygqygq2@qq.com>",
  "license": "MIT",
  "keywords": [
    "actions",
    "workflow",
    "wait"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ygqygq2/workflow-wait-action.git"
  },
  "scripts": {
    "prebuild": "rimraf dist || true",
    "build": "ncc build src/index.ts --license LICENSES.txt && git add dist/",
    "lint": "pnpm lint:eslint",
    "lint:eslint": "eslint src --cache --fix",
    "git:pre-commit": "pnpm build",
    "postinstall": "simple-git-hooks",
    "preinstall": "npx only-allow pnpm",
    "commit": "git cz",
    "release": "bumpp"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.1.0",
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.12.6",
    "@vercel/ncc": "^0.38.1",
    "bumpp": "^9.4.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.1",
    "eslint": "^9.0.0",
    "jest": "29.7.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.11.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm git:pre-commit",
    "preserveUnused": true
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
